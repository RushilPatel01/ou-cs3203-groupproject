@page
@model IndexModel

@{
    ViewData["Title"] = "deposit Page";
}

<head>
    <title>yOUr Money Dashboard Page</title>
    <link rel="stylesheet" href="deposit_page.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

    <div class="side_menu">
        <div class="logo">
            <img src="yOUr Money Logo 1.png" alt="yOUr Money Logo" class="yOUr_Money_Logo">
        </div>
        <ul>
            <li><a href="/dashboard_page_yOUr_Account_Checking" class="hover_effect">Accounts</a></li>
            <li><a href="/deposit_page" class="hover_effect">Deposit</a></li>
            <li><a href="/withdraw_page" class="hover_effect">Withdraw</a></li>
            <li><a href="/Index" class="hover_effect">Logout</a></li>
        </ul>
    </div>

    <div class = "deposit_box">
        <div class = "deposit_header">
            <h1>Deposit</h1>
        </div>

        <form id="login" class="user_input">
            <p1>From</p1>
            <input id="deposit_from" class="input" placeholder="Type 'Checking' or 'Savings'">

            <p1>Amount</p1>
            <input id="deposit_amount" class="input" placeholder="0.00" required type="number">

            <div class="button_wrapper">
                <button id="deposit_button" type="button" class="deposit_button">Deposit</button>
            </div>
        </form>
    </div>

</body>

</html>